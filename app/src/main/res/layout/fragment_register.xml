<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="cl.sebastian.mypet.Register">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/titulo"
            android:text="Inscriba a su mascota en el registro nacional de animales de compañía, bajo la nueva regulación de la Ley de Tenencia Responsable de Mascotas."
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <TextView
            android:layout_below="@+id/titulo"
            android:id="@+id/txtname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:text="Nombre de Mascota"

            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtname"
            android:ems="10"
            android:hint="Ingresa nombre de mascota"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            />


        <TextView
            android:id="@+id/txtsex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:text="Sexo"
            android:textStyle="bold" />


        <RadioGroup
            android:id="@+id/btngroup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/txtsex"
            android:orientation="horizontal"
            android:paddingStart="20dp">

            <RadioButton
                android:id="@+id/macho"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Macho" />

            <RadioButton
                android:id="@+id/hembra"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="20dp"
                android:text="Hembra" />

        </RadioGroup>

        <TextView
            android:id="@+id/txtedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btngroup"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:text="Edad"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtedad"
            android:ems="10"
            android:hint="Ingresa edad en meses"
            android:inputType="number"
            android:paddingStart="20dp"
            />


        <TextView
            android:id="@+id/txttipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edad"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:text="Tipo Mascota"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txttipo"
            android:ems="10"
            android:hint="Ingresa tipo de mascota"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            />

        <TextView
            android:id="@+id/txtpeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tipo"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:text="Peso (Kg)"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/peso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtpeso"
            android:ems="10"
            android:hint="Ingresa peso en kilos"
            android:inputType="number"
            android:paddingStart="20dp"
            />

        <Button

            android:id="@+id/guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/peso"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="guardar"
            android:text="ENVIAR REGISTRO"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />


        <!--<Button-->
        <!--android:id="@+id/guardar"-->
        <!--android:text="GUARDAR"-->
        <!--android:layout_below="@id/editText"-->
        <!--android:textAlignment="center"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

    </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>
