<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cl.sebastian.mypet.Complaint">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/titulo"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Has una denuncia en contra de las personas que no brindan los cuidados de alimentación o refugio a los animales como también casos de daños físicos."
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:layout_below="@id/titulo"
        android:id="@+id/txtnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:text="Nombre"
        android:textStyle="bold" />

        <EditText
            android:layout_below="@id/txtnombre"
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa tu nombre"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            />

    <TextView
        android:id="@+id/txtdenuncia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:text="Tipo de Denuncia"
        android:textStyle="bold" />

    <EditText
        android:layout_below="@id/txtdenuncia"
        android:id="@+id/denuncia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailSubject"
        android:hint="Ingresa el tipo de denuncia"
        android:paddingStart="20dp"
        />


    <TextView
        android:id="@+id/txtemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/denuncia"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:text="Email"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_below="@id/txtemail"
        android:hint="Ingresa tu email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        />

    <TextView
        android:id="@+id/txtcel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:text="Teléfono de Contacto"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cel"
        android:layout_below="@id/txtcel"
        android:hint="Ingresa tu teléfono de contacto"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        />

    <Button
        android:id="@+id/enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cel"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="ENVIAR DENUNCIA"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />



</RelativeLayout>

</android.support.v4.widget.NestedScrollView>

